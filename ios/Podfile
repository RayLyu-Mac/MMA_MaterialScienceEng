# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

target 'Runner' do
  # Enable dynamic frameworks for Swift dependencies
  use_frameworks!

  # Include Flutter dependencies
  pod 'Flutter', :path => File.expand_path('Flutter', __dir__)

  # Add FirebaseAuth or other dependencies
  pod 'FirebaseAuth', '~> 10.4'

  # Post-install script to customize build settings
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Set the minimum iOS deployment target to 13.0 for all pods
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      end

      # Specific configuration for FirebaseAuth or other pods
      if target.name == 'FirebaseAuth'
        target.build_configurations.each do |config|
          # Ensure compatibility with Apple Sign-In
          config.build_settings['SWIFT_VERSION'] = '5.10'
        end
      end
    end
  end
end
