platform :ios, '12.0'

require File.expand_path('../Flutter/Flutter.podspec', __FILE__)

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  pod 'Flutter', :path => '../Flutter'
  pod 'path_provider_foundation'
  pod 'permission_handler_apple'
  pod 'url_launcher_ios'
  pod 'webview_flutter_wkwebview'

  flutter_install_pods(File.dirname(File.realpath(__FILE__)))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['SWIFT_VERSION'] = '5.0'
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'PERMISSION_CAMERA=1',
        'PERMISSION_PHOTOS=1'
      ]
    end
  end
end
